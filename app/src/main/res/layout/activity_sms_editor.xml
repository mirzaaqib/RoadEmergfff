<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#E1F5FE"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mirzaaqibbeg.roademergencies.SmsEditor">
    <TextView
        android:textColor="#000000"
        android:padding="10dp"
        android:id="@+id/contactText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Send Message"
        android:onClick="sendMessage"
        android:background="#29B6F6"
        android:layout_below="@+id/contactText"
        android:id="@+id/sendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/buttonContactAdd"
        android:layout_below="@+id/sendMessage"
        android:onClick="pickContact"
        android:text="Add Contacts"
        android:layout_marginTop="8dp"
        android:background="#29B6F6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Clear Contacts"
        android:layout_below="@+id/buttonContactAdd"
        android:onClick="clearContacts"
        android:id="@+id/buttonClearContacts"
        android:background="#29B6F6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>

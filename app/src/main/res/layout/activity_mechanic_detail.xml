<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mirzaaqibbeg.roademergencies.MechanicDetailActivity">
    <ImageView
        android:src="@drawable/images"
        android:id="@+id/imageViewProfile"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        />
    <TextView
        android:layout_below="@+id/imageViewProfile"
        android:textColor="@color/colorAccent"
        android:id="@+id/mName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:text="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="65dp"
        android:text=" mechanical engineer."
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/mName"
        android:id="@+id/mdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/mdescription"
        android:id="@+id/distance"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="60dp"
        android:text="+91-8439748984"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:autoLink="phone"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/distance"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="65dp"
        android:text="2.3 KM"
        android:layout_marginBottom="8dp"
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <fragment
        android:layout_below="@+id/phoneNumber"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="30dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/phoneNumber"
        android:background="@drawable/locationicon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="34dp"
        android:id="@+id/imageView3"
        android:background="@drawable/callbutton"
        android:layout_below="@+id/distance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/imageView4"
        android:background="@drawable/freenew"
        android:layout_above="@+id/distance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
